<style>
  .footer {
    background-color: #0a192f;
    color: #ccd6f6;
    text-align: center;
    padding: 2rem;
    position: relative;
  }

  .footer-heading {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .highlight {
    display: inline-block;
    position: relative;
    color: var(--accent);
    cursor: pointer;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .highlight::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 100%;
    background: var(--accent);
    z-index: -1;
    transition: width 0.3s ease;
  }

  .highlight:hover {
    color: #0a192f;
  }

  .highlight:hover::after {
    width: 100%;
  }

  hr {
    border: 0;
    border-top: 1px solid #ccd6f6;
    margin: 2rem 0;
  }

  .footer-info {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .footer-left {
    text-align: left;
    font-size: 0.9rem;
  }

  .footer-right a {
    color: var(--accent);
    margin: 0 0.5rem;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .footer-right a:hover {
    color: #ffffff;
  }

  .footer-graphic {
    margin-top: 2rem;
  }

  .footer-graphic svg {
    display: block;
    width: 100%;
    height: auto;
    fill: var(--bg-primary);
  }
</style>
