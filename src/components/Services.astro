<style>
  .service-section {
    min-height: 100vh;
    padding: 6rem 2rem;
    position: relative;
    overflow: hidden;
    background-color: var(--background);
  }

  .services-container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  .services-container .section-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
    color: var(--accent);
    font-family: 'Butler';
    font-weight: 800;
  }

  .services-container .section-title span {
    position: relative;
  }

  .services-container .section-title span::after {
    content: '';
    position: absolute;
    bottom: 2px;
    right: 0px;
    width: 120%;
    height: 10px;
    background: var(--underline);
    transform: skewX(-30deg);
  }

  .services-grid {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    padding: 1rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .icon-container {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon {
    width: 32px;
    height: 32px;
    color: var(--accent);
  }

  .service-container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 3rem;
    position: relative;
  }

  .service {
    display: flex;
    align-items: center;
    margin-top: 80px;
  }

  .alternate-service {
    margin-top: 100px;
  }

  .wave {
    position: absolute;
    top: -25px;
    left: -135px;
    width: 100vw;
    z-index: -1;
  }

  .service-card {
    transform: translateY(-5px);
    border-color: var(--accent);
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin: 0;
    position: relative;
    display: inline-block;
  }

  .service-card h3 span {
    position: relative;
    z-index: 1;
  }

  .service-card h3 span::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0.1em;
    width: 100%;
    height: 0.3em;
    background-color: orange;
    z-index: -1;
    transform: skew(-15deg);
  }

  .service-card {
    padding: 1.5rem;
  }

  .service-card p {
    font-size: 1.3rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    max-width: 82%;
    padding-left: 10px;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skills span {
    color: var(--accent);
    padding: 0.25rem 0.75rem;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .service-section {
      padding: 4rem 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>
