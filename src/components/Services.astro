<style>
  .expertise-section {
    min-height: 100vh;
    padding: 6rem 2rem;
    position: relative;
    overflow: hidden;
    background-color: var(--background);
    color: var(--text);
  }

  .code-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.03;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .code-background pre {
    font-family: 'Fira Code', monospace;
    font-size: 1rem;
    line-height: 1.5;
    padding: 2rem;
    margin: 0;
    white-space: pre-wrap;
    color: var(--text);
  }

  .content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
    color: var(--accent);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .icon-container {
    background: rgba(var(--accent-rgb), 0.1);
    width: 64px; /* Increased size */
    height: 64px; /* Increased size */
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .icon {
    width: 32px; /* Increased size */
    height: 32px; /* Increased size */
    color: var(--accent);
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin: 0;
    color: var(--text);
    position: relative;
    display: inline-block;
  }

  .service-card h3 span {
    position: relative;
    z-index: 1;
  }

  .service-card h3 span::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0.1em; /* Adjust to overlap with text */
    width: 100%;
    height: 0.3em; /* Thickness of the underline */
    background-color: orange;
    z-index: -1;
    transform: skew(-15deg); /* Optional: adds a slight skew to the underline */
  }

  .service-card {
    background: rgba(var(--card-rgb), 0.1);
    border: 1px solid rgba(var(--card-border-rgb), 0.15);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: var(--accent);
  }

  .service-card p {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skills span {
    background: rgba(var(--accent-rgb), 0.1);
    color: var(--accent);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .expertise-section {
      padding: 4rem 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>

